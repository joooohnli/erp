      </field>
      <field name="complainant" display-name="投诉人姓名" onfail="">
      <depend name="required" />
      </field>
      <field name="tel" display-name="投诉人电话" onfail="">
      <depend name="required" />
      <depend name="common" />
      </field>
      <field name="email" display-name="投诉人Email" onfail="">
      <depend name="required" />
      <depend name="common" />
      <depend name="email" />
      </field>
	  <field name="complain_way" display-name="投诉方式" onfail="">
      <depend name="required" />
      <depend name="common" />
      </field>
	  <field name="complain_type" display-name="投诉类型" onfail="">
      <depend name="required" />
      <depend name="common" />
      </field>
      <field name="content" display-name="投诉内容" onfail="">
